{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
   <div class="row">
      <div class="col-4">
         <div>
            <img src="{{ color.image }}" width="250" height="250">
         </div>
      </div>
      

      <div class="col-6">
         <table class="table table-bordered">
            <tr>
               <th colspan="2" class="bg-light">
                  <h2 class="font family">{{ color.name }} </h2>
               </th>
            </tr>

            

            <tr class="h4">
               <th class="col-md-3"style="background-color: lightblue">Total phones</th>
               <td class="col-md-7"style="background-color: lightblue">{{ color.phones | length }}</td>
            </tr>
            <tr class="h4">
               <th class="col-md-3"style="background-color: lightblue">Phone List</th>
               <td class="col-md-7"style="background-color: lightblue">
                  {% if color.phones != null %}
                     {% for phone in color.phones %}
                        <a href="{{ path('phone_detail', {'id' : phone.id })}}">
                           {{ phone.title }} 
                        </a>
                        <br>
                     {% endfor %}
               {% endif %}
               </td>
            </tr>
         
         </table> 
      
      </div>
   </div>
</div>
{% endblock %}