{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3">
            <h1 class="font family">Author List</h1>
        </th>
        <th>
            <a class="text-decoration-none" href="{{ path('author_add') }}">
                <img src="{{ asset('images/buttons/add.jpg') }}" width="50" height="50">
            </a>
        </th>
    </tr>
    <tr>
        <th class="font family">Id</th>
        <th class="font family">Name</th>
        <th class="font family">Image</th>
        <th class="font family">Actions</th>
    </tr>
    {% for author in authors %}
        <tr>
            <td>{{ author.id }}</td>
            <td>{{ author.name }}</td>
            <td>
                <a class="text-decoration-none" href="{{ path('author_detail', {'id' : author.id }) }}">
                    <img src="{{ author.image }}" width="150" height="150">
                </a>
           </td>
            <td>
                <a class="text-decoration-none" href="{{ path('author_detail', {'id' : author.id }) }}">
                    <img src="{{ asset('images/buttons/detail.jpg') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('author_edit', {'id' : author.id }) }}">
                    <img src="{{ asset('images/buttons/edit.jpg') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('author_delete', {'id' : author.id }) }}"
                onclick="return confirm('Are you sure to delete this author ?');"
                >
                    <img src="{{ asset('images/buttons/delete.jpg') }}" width="40" height="40">
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
</div>
{% endblock %}